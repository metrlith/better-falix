{
  "manifest_version": 3,
  "name": "Better Falix (Empty)",
  "version": "1.0.0",
  "description": "A plain Chrome extension for Falix sites. (Does nothing yet)",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://client.falixnodes.net/*",
    "https://falixnodes.net/*",
    "https://kb.falixnodes.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
